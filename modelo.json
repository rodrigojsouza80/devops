
{   
     "variables": {
             "tag": "1.0"
     },
     "builders": [
             {
                    "author": "Rodrigo Souza",
                    "type": "docker",
                    "image": "debian:buster",
                    "commit": "true",
                    "changes": [
                             "ENTRYPOINT [\"\"]",
                             "CMD [\"nginx\", \"-g\", \"daemon off;\"]",
                             "EXPOSE 80"
                    ]
             }
     
     ],
     "provisioners": [
             {
                    "type": "shell",
                    "inline": ["apt-get update && apt-get -y install nginx"]
             }
       ],
       "post-processors": [
             [
                 {
                    "type": "docker-tag",
                    "repository": "utahpacker",
                    "tag": "{{user 'tag' }}"
                 }
             ]
         
      ]
}
                 
                 
                 
